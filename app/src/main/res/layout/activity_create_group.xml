<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateGroupActivity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/primary_color"
    >

    <include
        android:id="@+id/toolbar_create_group"
        layout="@layout/create_group_actionbar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_group"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:src="@drawable/placeholder_group_member"
        tools:src="@drawable/placeholder_group_member"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/group_name"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/group_name_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_rounded_style"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/group_description"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/group_description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded_style"
            android:layout_marginTop="10dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white"
            android:paddingHorizontal="15dp"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:lines="4"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideInset"
            android:scrollHorizontally="false"
            />
    </LinearLayout>
</LinearLayout>